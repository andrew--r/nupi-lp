.modal
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 400
  
  opacity 0
  visibility hidden
  transition visibility 0s ease, opacity .2s ease

  background rgba(0, 0, 0, 1)
  
  &--visible
    visibility visible
    opacity 1
  
  &__window
    position absolute
    top 0
    left 0
    
    
    width 100%
    height 100vh
    // max-height 80vh
    // height 576px
    
  &__video
    size(100%)
    iframe
      size(100%)
  

  &__close
    position absolute
    top 32px
    right 64px
    
    size(48px)
    
    background-image url('data:image/png;base64,')
    background-size cover
    
    cursor pointer
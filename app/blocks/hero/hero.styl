.hero
  padding-top 55px
  padding-bottom 55px
  
  &__inner
    container($site-width)
    
    text-align center
  

  &__title
    display inline-block
    margin-bottom 18px
    
    font-size 50px
    font-weight 300
    line-height 1
  

  &__subtitle
    display inline-block
    margin-bottom 25px
    
    font-size 22px
    font-weight 300 
  

  &__button
    hidetext()
  
    display block
    size(170px, 50px)
    margin auto
    
    image-bg('googel-play-badge.png')
  

  &__mockup
    position relative
    margin-top 10px
    
    img
      display block
  

  &__icon
    position absolute
    top 50%
    left 50%
    transform translateY(-50%)
    
    flex-center()
    margin-left -29px
    size(58px)
    
    background-color #414042
    border-radius 50%
    cursor pointer
    transition all .2s ease
    
    &:hover
      background #222
    
    &:after
      content ''
      
      position relative
      right -2px
      
      display block
      
      size(23px, 27px)
      
      background-image svg('play.svg')